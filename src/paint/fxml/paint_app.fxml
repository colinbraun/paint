<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.Canvas?>

<?import javafx.scene.text.Text?>
<BorderPane fx:controller="paint.controller.MainController" xmlns:fx="http://javafx.com/fxml">
    <top>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints percentWidth="100"/>
            </columnConstraints>
            <MenuBar fx:id="menuBar" GridPane.rowIndex="0" GridPane.columnIndex="0">
                <Menu text="File">
                    <MenuItem text="Open" onAction="#handleOpen"/>
                    <MenuItem text="Save" onAction="#handleSave"/>
                    <MenuItem text="Save As" onAction="#handleSaveAs"/>
                    <MenuItem text="Exit" onAction="#handleExit"/>
                </Menu>
                <Menu text="Edit">
                    <!--Content most likely soon to come-->
                </Menu>
                <Menu text="Help">
                    <MenuItem text="About" onAction="#handleAbout"/>
                </Menu>
            </MenuBar>
            <HBox GridPane.rowIndex="1" GridPane.columnIndex="0">
                <ColorPicker fx:id="colorPicker" onAction="#handleColorPicker"/>
                <ToggleButton fx:id="toggleDrawLine" text="Line" onAction="#handleToggleDrawLine"/>
                <VBox alignment="CENTER">
                    <!--TODO: Consider other event options -->
                    <Slider fx:id="lineWidthSlider" showTickLabels="true" showTickMarks="true" majorTickUnit="2" minorTickCount="1" value="1" min="0" max="10" prefWidth="300" onMouseMoved="#handleSliderAction"/>
                    <Text>Line Width</Text>
                </VBox>
            </HBox>
        </GridPane>
    </top>
    <center>
        <ScrollPane>
            <Canvas fx:id="canvas" width="400" height="400">
            </Canvas>
        </ScrollPane>
    </center>
</BorderPane>